	"source": "src/index.html",
	"scripts": {
		"prepare": "husky install",
		"start": "npm run serve",
		"serve": "vite --host",
		"build": "vite build",
		"typecheck": "vue-tsc --noEmit",
		"serve-build": "serve -p 8080 dist",
		"format-check": "prettier '**/*.{vue,ts,md,scss,yml,json}' --check",
		"format": "prettier '**/*.{vue,ts,md,scss,yml,json}' --write",
		"test-watch": "jest --verbose --watchAll ./src",
		"test": "jest --verbose --all --color ./src",
		"todo": "leasot -x 'src/**/*.ts'"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.5.1",
		"@fortawesome/free-brands-svg-icons": "^6.5.1",
		"@fortawesome/free-regular-svg-icons": "^6.5.1",
		"@fortawesome/free-solid-svg-icons": "^6.5.1",
		"@fortawesome/vue-fontawesome": "^3.0.5",
		"lodash": "^4.17.21",
		"pinia": "^2.1.7",
		"prettier": "^3.0.3",
		"sass": "^1.68.0",
		"sleep-promise": "^9.1.0",
		"vue": "^3.3.4",
		"yaml": "^2.3.0",
		"zod": "^3.22.4",
		"zod-validation-error": "^2.1.0"
	},
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.9.1"
	},
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.2",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "^29.5.5",
		"@types/lodash": "^4.14.198",
		"@types/node": "^20.6.3",
		"@types/serve-handler": "^6.1.4",
		"@vitejs/plugin-vue": "^4.5.2",
		"buffer": "^6.0.3",
		"fs-extra": "^11.1.1",
		"husky": "^8.0.3",
		"jest-environment-jsdom": "^29.7.0",
		"leasot": "^13.3.0",
		"lint-staged": "^15.2.0",
		"serve": "^14.2.1",
		"serve-handler": "^6.1.5",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.3.3",
		"utility-types": "^3.10.0",
		"vite": "^5.0.7",
		"vue-tsc": "^1.8.27"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "jsdom",
		"resetMocks": false,
		"moduleFileExtensions": [
			"yaml",
			"yml",
			"ts",
			"js"
		]
	},
	"lint-staged": {
		"**/*.{md,scss,yml,json}": "prettier --write",
		"**/*.{ts,vue}": [
			"prettier --write"
		]
	}
}
